// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  company   String?
  role      Role     @default(PARTNER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isApproved Boolean @default(false)
  quotes    Quote[]
  carts     Cart[]
}

enum Role {
  ADMIN
  PARTNER
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  // modelName removed (redundant with name)
  // Arontec: model_name -> name in Rium?
  // Let's assume name = model_name.

  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  Int
  
  // Basic Info
  brand       String?
  modelNo     String?   @map("model_no")
  manufacturer String?
  origin      String?
  
  // Prices
  price       Float     // Selling Price (B2B Price)
  consumerPrice Float?  @map("consumer_price")
  supplyPrice Float?    @map("supply_price")
  
  // Stock & Shipping
  stockQuantity Int?    @map("stock_quantity")
  quantityPerCarton Int? @map("quantity_per_carton")
  defaultQuantity Int?  @default(1) @map("default_quantity")
  shippingFee Float?    @map("shipping_fee") 
  shippingFeeIndividual Float? @map("shipping_fee_individual")
  shippingFeeCarton Float? @map("shipping_fee_carton")
  isTaxFree   Boolean?  @map("is_tax_free") @default(false)
  
  // Details
  imageUrl    String?   // matches DB column "imageUrl"
  detailUrl   String?   @map("detail_url")
  description String?
  productSpec String?   @map("product_spec")
  productOptions String? @map("product_options")
  remarks     String?
  
  isAvailable Boolean  @default(true)
  isNew       Boolean  @default(false) @map("is_new")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  cartItems   Cart[]
  quoteItems  QuoteItem[]
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String
  slug      String    @unique
  color     String?   @default("#e0e0e0")
  products  Product[]
}

model Cart {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
  quantity  Int
  option    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, productId, option])
}

model Quote {
  id          Int         @id @default(autoincrement())
  quoteNumber String      @unique
  user        User        @relation(fields: [userId], references: [id])
  userId      Int
  status      QuoteStatus @default(PENDING)
  totalAmount Float
  validUntil  DateTime?
  message     String?     // Admin message
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  items       QuoteItem[]
}

enum QuoteStatus {
  PENDING
  APPROVED
  REJECTED
  EXPIRED
}

model QuoteItem {
  id        Int     @id @default(autoincrement())
  quote     Quote   @relation(fields: [quoteId], references: [id])
  quoteId   Int
  product   Product @relation(fields: [productId], references: [id])
  productId Int
  quantity  Int
  price     Float   // Price at the time of quote
}
